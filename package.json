{
  "name": "outlook-planner-addin",
  "version": "1.0.0",
  "description": "Outlook add-in to send emails to Microsoft Planner and sync comments back",
  "main": "src/taskpane/taskpane.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development", 
    "build:complete": "node build.js",
    "deploy": "node deploy-production.js",
    "dev-server": "webpack serve --mode development --https",
    "start": "office-addin-debugging start manifest.xml",
    "stop": "office-addin-debugging stop manifest.xml",
    "validate": "office-addin-manifest validate manifest.xml",
    "sideload": "office-addin-dev-settings sideload manifest.xml",
    "test": "echo 'Run npm run dev-server and test in Outlook'"
  },
  "dependencies": {
    "@microsoft/office-js": "^1.1.85",
    "@azure/msal-browser": "^3.0.0",
    "@microsoft/microsoft-graph-client": "^3.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/office-js": "^1.0.374",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.32.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.3",
    "office-addin-debugging": "^5.0.0",
    "office-addin-dev-certs": "^1.11.3",
    "office-addin-lint": "^2.2.5",
    "office-addin-manifest": "^1.12.3",
    "regenerator-runtime": "^0.14.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}