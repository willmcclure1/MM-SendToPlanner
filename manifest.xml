<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides" 
           xsi:type="MailApp">
  <Id>893cceea-2709-4db5-99ec-7cd2364949fc</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>MMPL</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Send to Planner" />
  <Description DefaultValue="Send emails to Microsoft Planner boards" />
  <IconUrl DefaultValue="https://willmcclure1.github.io/MM-SendToPlanner/assets/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://willmcclure1.github.io/MM-SendToPlanner/assets/icon-80.png" />
  <SupportUrl DefaultValue="https://github.com/willmcclure1/MM-SendToPlanner" />

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://willmcclure1.github.io/MM-SendToPlanner/taskpane.html" />
        <RequestedHeight>300</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteMailbox</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url" />

          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel" />
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label" />
                  <Supertip>
                    <Title resid="TaskpaneButton.Label" />
                    <Description resid="TaskpaneButton.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://willmcclure1.github.io/MM-SendToPlanner/assets/icon-16.png" />
        <bt:Image id="Icon.32x32" DefaultValue="https://willmcclure1.github.io/MM-SendToPlanner/assets/icon-32.png" />
        <bt:Image id="Icon.80x80" DefaultValue="https://willmcclure1.github.io/MM-SendToPlanner/assets/icon-80.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://willmcclure1.github.io/MM-SendToPlanner/commands.html" />
        <bt:Url id="Taskpane.Url" DefaultValue="https://willmcclure1.github.io/MM-SendToPlanner/taskpane.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Send to Planner" />
        <bt:String id="TaskpaneButton.Label" DefaultValue="Send to Planner" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Send this email to a Microsoft Planner board" />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>